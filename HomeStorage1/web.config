  <location path="Default.aspx">
    <system.web>
      <authorization>
        <allow users="?"/>
      </authorization>
    </system.web>
  </location>



  <location path="SignUp.aspx">
    <system.web>
      <authorization>
        <allow users="?"/>
      </authorization>
    </system.web>
  </location>
  
  
  <location path="SearchItem.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>

  <location path="AddItem.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>

  <location path="AddItemType.aspx">
    <system.web>
      <authorization>
        <allow roles="Administrator,Owner"></allow>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  
    <location path="UserManagement.aspx">
    <system.web>
      <authorization>
        <allow roles="Administrator,Owner"></allow>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>


  <connectionStrings>
    <add name="HomeStorage"
    connectionString="Server=localhost\SqlExpress;Database=HomeStorage;Integrated Security=True"
    providerName="System.Data.SqlClient"/>

    <remove name="LocalSqlServer"/>
    <add name="LocalSqlServer"
      connectionString="Server=localhost\SqlExpress;Database=HomeStorage;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>
